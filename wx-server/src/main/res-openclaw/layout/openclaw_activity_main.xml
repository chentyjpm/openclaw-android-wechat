<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <Button
        android:id="@+id/btn_open_terminal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/openclaw_home_open_terminal" />

    <Button
        android:id="@+id/btn_open_server_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openclaw_btn_server_settings" />

    <Button
        android:id="@+id/btn_open_config_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑OpenClaw配置" />

    <Button
        android:id="@+id/btn_open_accessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openclaw_btn_open_accessibility" />

    <Button
        android:id="@+id/btn_open_ime_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openclaw_btn_keyboard_settings" />

    <Button
        android:id="@+id/btn_pick_ime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openclaw_btn_pick_ime" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="status"
                android:src="@drawable/openclaw_ic_status_off" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无障碍服务授权: 未知"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_server_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="server_status"
                android:src="@drawable/openclaw_ic_status_off" />

            <TextView
                android:id="@+id/tv_server_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OpenClaw服务: 未连接"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_service_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="foreground_service_status"
                android:src="@drawable/openclaw_ic_status_off" />

            <TextView
                android:id="@+id/tv_service_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前台服务: 已停止"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_service_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/openclaw_btn_service_start" />

            <Button
                android:id="@+id/btn_service_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/openclaw_btn_service_stop" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
