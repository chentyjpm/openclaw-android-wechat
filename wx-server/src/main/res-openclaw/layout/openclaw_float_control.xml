<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CC111111"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_float_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OpenClawBot"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_float_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_float_tab_scan_start"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="&#24320;&#22987;"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_float_tab_scan_stop"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="&#20572;&#27490;"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_float_log_toggle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="&#26085;&#24535;"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/float_status_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_float_acc_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="accessibility_status"
            android:src="@drawable/openclaw_ic_status_on" />

        <TextView
            android:id="@+id/tv_float_acc_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="10dp"
            android:text="&#26080;&#38556;&#30861;"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_float_bot_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="bot_status"
            android:src="@drawable/openclaw_ic_status_on" />

        <TextView
            android:id="@+id/tv_float_bot_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="10dp"
            android:text="Bot&#26381;&#21153;"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_float_fg_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="foreground_status"
            android:src="@drawable/openclaw_ic_status_on" />

        <TextView
            android:id="@+id/tv_float_fg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="&#21069;&#21488;&#26381;&#21153;"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_float_log_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_float_log_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WS &#36816;&#34892;&#26085;&#24535;"
                android:visibility="gone"
                android:textColor="#FFB0FFB0"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_float_log_clear"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="gone"
                android:text="&#28165;&#31354;" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/sv_float_log"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:layout_marginTop="4dp"
            android:background="#66222222"
            android:fillViewport="true"
            android:padding="6dp">

            <TextView
                android:id="@+id/tv_float_log_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="&#26085;&#24535;&#21152;&#36733;&#20013;..."
                android:textColor="#FFD8FFD8"
                android:textSize="11sp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
