<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Host" />

        <EditText
            android:id="@+id/et_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="127.0.0.1"
            android:inputType="textUri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP Port" />

        <EditText
            android:id="@+id/et_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="18789"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KeepAlive (seconds, >=20)" />

        <EditText
            android:id="@+id/et_keepalive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="60"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/cb_tls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable TLS" />

        <CheckBox
            android:id="@+id/cb_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug Events" />

        <CheckBox
            android:id="@+id/cb_debug_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug XML" />

        <CheckBox
            android:id="@+id/cb_capture_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Screen Capture Strategy" />

        <CheckBox
            android:id="@+id/cb_ocr_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable OCR" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>
</ScrollView>
