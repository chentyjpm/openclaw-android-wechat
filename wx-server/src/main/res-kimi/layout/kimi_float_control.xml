<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CC111111"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_float_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LanBot"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_float_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Stopped"
        android:textColor="#FF8BD17C"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_float_start"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Start" />

        <Button
            android:id="@+id/btn_float_stop"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="Stop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_float_tab_scan_start"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="TabScan Start" />

        <Button
            android:id="@+id/btn_float_tab_scan_stop"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:text="TabScan Stop" />
    </LinearLayout>

</LinearLayout>
