<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器地址" />

        <EditText
            android:id="@+id/et_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="127.0.0.1"
            android:inputType="textUri" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP端口" />

        <EditText
            android:id="@+id/et_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="18790"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KeepAlive(秒，>=20)" />

        <EditText
            android:id="@+id/et_keepalive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="60"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/cb_tls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启用TLS" />

        <CheckBox
            android:id="@+id/cb_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调试事件" />

        <CheckBox
            android:id="@+id/cb_debug_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调试XML" />

        <CheckBox
            android:id="@+id/cb_capture_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用无障碍录屏采集（推荐）" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存" />
    </LinearLayout>
</ScrollView>
